{
	auto_https disable_redirects
}

http://redsea.duckdns.org {
	handle /.well-known/acme-challenge/* {
		root * /var/www/html
		file_server
	}
	redir https://{host}{uri}
}

redsea.duckdns.org {
	encode gzip

	handle /browse* {
		reverse_proxy 127.0.0.1:8081
	}

	handle /cgi-bin/* {
		reverse_proxy 127.0.0.1:8082
	}

	handle /manage {
		root * /var/www/html
		file_server
		try_files /multi_sql.html
	}

	handle {
		root * /var/www/html
		file_server browse
	}

	log {
		output file /var/log/caddy/access.log
		level INFO
	}
}

